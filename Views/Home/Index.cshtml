        document.getElementById('bcnetResolved').innerText = data.bcnet.resolved;
        document.getElementById('converageIssues').innerText = data.converage.issues;
        document.getElementById('converageResolved').innerText = data.converage.resolved;
        document.getElementById('handlinkIssues').innerText = data.handlink.issues;
